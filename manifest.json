{
  "manifest_version": 3,
  "name": "twitter-zenn-mode",
  "version": "1.0.1",
  "description": "Twitter(X)のノイズを無くして見たい人だけを見るモード。自分のアクションも取れない",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
